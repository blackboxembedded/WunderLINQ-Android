<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cell_layout"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_columnWeight="1"
    app:layout_rowWeight="1"
    android:layout_weight="1"
    android:background="?attr/gridViewBorder">

    <TextView
        android:id="@+id/cell_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:textColor="?attr/primaryTextColor"
        android:text=""
        android:maxLines="2"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeMaxTextSize="16sp"
        app:autoSizeStepGranularity="1sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:labelFor="@id/cell_icon"
        android:singleLine="false"
        android:paddingStart= "6dp"
        android:paddingEnd ="6dp"
        android:ellipsize="none"
        app:layout_constraintHeight_percent="0.15"/>

    <TextView
        android:id="@+id/cell_value"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:maxLines="2"
        android:textAlignment="center"
        android:textColor="?attr/primaryTextColor"
        android:textSize="36sp"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="200sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/cell_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cell_label"
        android:singleLine="false"
        android:paddingStart = "6dp"
        android:paddingEnd ="6dp"
        android:paddingTop = "12dp"
        android:paddingBottom ="6dp"
        android:ellipsize="none" />

    <ImageView
        android:id="@+id/cell_icon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:tint="?attr/iconTintColor"
        app:srcCompat="@drawable/ic_cog"
        android:importantForAccessibility="no"/>
</androidx.constraintlayout.widget.ConstraintLayout>